<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/refresh_hint"
        android:layout_width="@dimen/appwidget_light_refresh_size"
        android:layout_height="@dimen/appwidget_light_refresh_size"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_refresh_black"
        android:contentDescription="@string/appwidget_light_refresh_content_description" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/appwidget_light_timestamp_text"
        android:textSize="@dimen/appwidget_light_timestamp_text" />

</LinearLayout>
